{
  "name": "template",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "check": "eslint . && prettier --check .",
    "fix": "eslint . --fix ; prettier --write .",
    "ncu": "pnpm --recursive --workspace-concurrency=1 exec npm-check-updates"
  },
  "lint-staged": {
    "*.(js|ts|jsx|tsx|svelte)": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.!(js|ts|jsx|tsx|editorconfig|*ignore|npmrc|svg)": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "eslint-plugin-testing-library": "^5.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "npm-check-updates": "^12.5.12",
    "prettier": "^2.6.2",
    "prettier-plugin-sh": "^0.8.2",
    "prettier-plugin-svelte": "^2.7.0",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.1",
    "svelte-preprocess": "^4.10.6",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  }
}
